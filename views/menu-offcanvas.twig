{# <?php #}
<aside class="left-off-canvas-menu">
	<ul class="off-canvas-list">
		<li><label>{{ site.name }}</label></li>
		{% for item in menu.offcanvas.items %}
			{% if item.get_children %}
				<li id="menu-item-{{item.ID}}" class="has-submenu menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
					<a href="{{ item.get_path }}">{{ item.title }}</a>
					<ul class="left-submenu">
						<li class="back"><a href="#">{{ __('Back', 'maera_foundation') }}</a></li>
						{% for child in item.get_children %}
							{% if child.get_children %}
								<li id="menu-item-{{child.ID}}" class="has-submenu menu-item menu-item-type-{{child.type}} menu-item-object-{{child.object}} menu-item-{{child.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
									<a href="{{ child.get_path }}">{{ child.title }}</a>
									<ul class="left-submenu">
										<li class="back"><a href="#">{{ __('Back', 'maera_foundation') }}</a></li>
										{% for grant_child in child.get_children %}
											<li id="menu-item-{{grant_child.ID}}" class="menu-item menu-item-type-{{grant_child.type}} menu-item-object-{{grant_child.object}} menu-item-{{grant_child.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
												<a href="{{ grant_child.get_path }}">{{ grant_child.title }}</a>
											</li>
										{% endfor %}
									</ul>
								</li>
							{% else %}
								<li id="menu-item-{{child.ID}}" class="menu-item menu-item-type-{{child.type}} menu-item-object-{{child.object}} menu-item-{{child.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
									<a href="{{ child.get_path }}">{{ child.title }}</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</li>
			{% else %}
				<li id="menu-item-{{item.ID}}" class="menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
					<a href="{{item.link}}">{{ item.title }}</a>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
</aside>
