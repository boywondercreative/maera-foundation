{% from 'container_open.html.twig' import container_open as container_open %}
{% from 'container_close.html.twig' import container_close as container_close %}
{% from 'row_open.html.twig' import row_open as row_open %}
{% from 'row_close.html.twig' import row_close as row_close %}

{% include 'html-header.twig' %}

<body class="{{ body_class }}">

	<a href="#content" class="sr-only skip-link screen-reader-text">{{ i18n.skiptomaincontent }}</a>

	{% do action( 'get_header' ) %}

	{% do action( 'maera/header/before', post.ID ) %}
{% if menu.offcanvas %}
	<div class="off-canvas-wrap" data-offcanvas>
		<div class="inner-wrap">
			{% if not menu.primary %}<a id="nav-toggle" class="left-off-canvas-toggle" href="#" ><span></span></a>{% endif %}
{% endif %}
			{% include 'header.twig' %}
			{% include 'main-header.twig' %}
			{% do action( 'maera/header/after', post.ID ) %}
			{% do action( 'maera/wrap/before', post.ID ) %}

			{{ container_open( 'div', 'wrap-main-section', 'wrap main-section' ) }}

			{% do action( 'maera/content/before', post.ID ) %}

			<div class="content" id="content" itemprop="mainContentOfPage">

				<div class="content-primary-wrapper {{ 'main'|apply_filters( 'maera/section_class/wrapper' ) }}">
					{% do action( 'maera/main/before', post.ID ) %}
					<main class="{{ 'main'|apply_filters( 'maera/section_class/content' ) }}" role="main">

						{% if title %}<h1>{{ title }}</h1>{% endif %}
						{% block content %}
						{{ i18n.sorrynocontent }}
						{% endblock %}

					</main><!-- /.main -->
					{% do action( 'maera/main/after', post.ID ) %}

					{# PRIMARY SIDEBAR #}
					{% if sidebar.primary %}
					<aside id="sidebar-primary" class="{{ 'sidebar'|apply_filters( 'maera/section_class/primary' ) }}" role="complementary">
						{{ sidebar.primary }}
					</aside>
					{% endif %}
				</div>

				{# SECONDARY SIDEBAR #}
				{% if sidebar.secondary %}
				<aside id="sidebar-secondary" class="{{ 'sidebar'|apply_filters( 'maera/section_class/secondary' ) }}" role="complementary">
					{{ sidebar.secondary }}
				</aside>
				{% endif %}

				<div class="clearfix"></div>

			</div><!-- /#content -->

			{% do action( 'maera/content/after' ) %}

			{{ container_close( 'div' ) }}

			{% do action( 'maera/footer/before', post.ID ) %}
			<footer class="page-footer">
				{% do action( 'maera/footer/start', post.ID ) %}
				{% include 'footer.twig' %}
				{% do action( 'maera/footer/end', post.ID ) %}
			</footer>
			{% do action( 'maera/footer/after', post.ID ) %}
{% if menu.offcanvas %}
			<a class="exit-off-canvas"></a>
{% endif %}
		</div>
	</div>
	{{ function( 'wp_footer' ) }}
</body>
</html>
